<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exercise.shopping" >

    <application
        android:allowBackup="true"
        android:name=".ShoppingApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.exercise.shopping.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.exercise.shopping.ui.ProductActivity" android:parentActivityName="com.exercise.shopping.ui.MainActivity" />
        <activity android:name=".ui.BasketActivity" android:parentActivityName="com.exercise.shopping.ui.MainActivity" />
    </application>

</manifest>
